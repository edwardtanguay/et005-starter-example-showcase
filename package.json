{
  "name": "vite-vanilla-dark",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "run-p backend frontend",
    "backend": "nodemon",
    "frontend": "vite",
    "buildBackend": "tsc -p ./backend/tsconfig.json",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "ce": "node dist/backend/ce.js",
    "test": "vitest --ui",
    "testcov": "vitest --coverage"
  },
  "nodemonConfig": {
    "watch": [
      "backend"
    ],
    "ext": "ts",
    "exec": "npm run buildBackend"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "@vitest/coverage-v8": "^0.32.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "sass": "^1.63.6",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  }
}
